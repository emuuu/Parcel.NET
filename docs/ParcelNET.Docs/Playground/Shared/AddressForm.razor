@namespace ParcelNET.Docs.Playground.Shared

<div class="card mb-2">
    <div class="card-header py-1">
        <span class="small fw-semibold">@Title</span>
    </div>
    <div class="card-body py-2">
        <div class="row g-2">
            <div class="col-12">
                <label class="form-label small mb-0">Name</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.Name" @bind:event="oninput" />
            </div>
            <div class="col-8">
                <label class="form-label small mb-0">Street</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.Street" @bind:event="oninput" />
            </div>
            <div class="col-4">
                <label class="form-label small mb-0">House No.</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.HouseNumber" @bind:event="oninput" />
            </div>
            <div class="col-4">
                <label class="form-label small mb-0">Postal Code</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.PostalCode" @bind:event="oninput" />
            </div>
            <div class="col-4">
                <label class="form-label small mb-0">City</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.City" @bind:event="oninput" />
            </div>
            <div class="col-4">
                <label class="form-label small mb-0">Country (ISO 3)</label>
                <input type="text" class="form-control form-control-sm" @bind="Model.CountryCode" @bind:event="oninput" />
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired] public AddressFormModel Model { get; set; } = new();
    [Parameter] public string Title { get; set; } = "Address";
}
