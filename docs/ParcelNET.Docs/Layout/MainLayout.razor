@namespace ParcelNET.Docs.Layout
@inherits LayoutComponentBase
@inject DocContentService ContentService
@inject NavigationManager Navigation

<div class="docs-layout">
    <header class="docs-header">
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-link text-white d-lg-none p-0" @onclick="ToggleSidebar">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="3" y1="6" x2="21" y2="6"></line>
                    <line x1="3" y1="12" x2="21" y2="12"></line>
                    <line x1="3" y1="18" x2="21" y2="18"></line>
                </svg>
            </button>
            <a href="/" class="docs-brand text-decoration-none text-white d-flex align-items-center gap-2">
                <svg width="28" height="28" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M20 8h-3V4H3c-1.1 0-2 .9-2 2v11h2c0 1.66 1.34 3 3 3s3-1.34 3-3h6c0 1.66 1.34 3 3 3s3-1.34 3-3h2v-5l-3-4zM6 18.5c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zm13.5-9 1.96 2.5H17V9.5h2.5zm-1.5 9c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5z"/>
                </svg>
                <span><strong>ParcelNET</strong> Docs</span>
            </a>
        </div>
        <div class="d-flex align-items-center gap-3">
            <button class="btn btn-outline-light btn-sm search-trigger" @onclick="OpenSearch">
                Search... <kbd>Ctrl+K</kbd>
            </button>
            <a href="https://github.com/emuuu/ParcelNET" target="_blank" rel="noopener"
               class="text-white" title="GitHub">
                <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
            </a>
        </div>
    </header>

    <div class="docs-body">
        <nav class="docs-sidebar @(_sidebarOpen ? "open" : "")">
            <DocNavMenu OnNavigate="CloseSidebar" />
        </nav>

        @if (_sidebarOpen)
        {
            <div class="docs-sidebar-backdrop d-lg-none" @onclick="CloseSidebar"></div>
        }

        <main class="docs-main">
            @Body
        </main>
    </div>
</div>

<SearchDialog @ref="_searchDialog" />

@code {
    private SearchDialog? _searchDialog;
    private bool _sidebarOpen;

    protected override async Task OnInitializedAsync()
    {
        await ContentService.InitializeAsync();
    }

    private void OpenSearch()
    {
        _searchDialog?.Open();
    }

    private void ToggleSidebar()
    {
        _sidebarOpen = !_sidebarOpen;
    }

    private void CloseSidebar()
    {
        _sidebarOpen = false;
    }
}
