@namespace Parcel.NET.Docs.Playground.DHL
@inject PlaygroundSessionService Session
@inject CarrierClientFactory ClientFactory

<div class="row g-2 mb-3">
    <div class="col-md-4">
        <label class="form-label small mb-0">Country Code (ISO 2)</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_countryCode" @bind:event="oninput" />
    </div>
    <div class="col-md-4">
        <label class="form-label small mb-0">City</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_city" @bind:event="oninput" />
    </div>
    <div class="col-md-4">
        <label class="form-label small mb-0">Postal Code</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_postalCode" @bind:event="oninput" placeholder="Optional" />
    </div>
</div>

<button class="btn btn-primary" @onclick="Send"
        disabled="@(_sending || !CredentialsReady || string.IsNullOrWhiteSpace(_countryCode) || string.IsNullOrWhiteSpace(_city))">
    @if (_sending) { <span class="spinner-border spinner-border-sm me-1"></span> }
    Find Locations
</button>
@if (!CredentialsReady)
{
    <span class="text-warning small ms-2">Configure at least an API Key</span>
}

@code {
    [Parameter] public bool CredentialsReady { get; set; }
    [Parameter] public EventCallback<PlaygroundResult> OnResult { get; set; }

    private string _countryCode = "DE";
    private string _city = "Berlin";
    private string _postalCode = "";
    private bool _sending;

    private async Task Send()
    {
        _sending = true;
        StateHasChanged();

        var postal = string.IsNullOrWhiteSpace(_postalCode) ? null : _postalCode;
        var result = await ClientFactory.ExecuteDhlLocationFinderAsync(
            Session.DhlCredentials,
            async client => await client.FindByAddressAsync(_countryCode, _city, postal));

        _sending = false;
        await OnResult.InvokeAsync(result);
    }
}
