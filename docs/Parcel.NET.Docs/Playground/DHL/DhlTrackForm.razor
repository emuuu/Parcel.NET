@namespace Parcel.NET.Docs.Playground.DHL
@using Parcel.NET.Dhl.UnifiedTracking.Models
@inject PlaygroundSessionService Session
@inject CarrierClientFactory ClientFactory

<div class="row g-2 mb-3">
    <div class="col-md-6">
        <label class="form-label small mb-0">Tracking Number</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_trackingNumber" @bind:event="oninput"
               placeholder="e.g. 340434161094042557" />
    </div>
    <div class="col-md-3">
        <label class="form-label small mb-0">Language</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_language" @bind:event="oninput" placeholder="e.g. en" />
    </div>
    <div class="col-md-3">
        <label class="form-label small mb-0">Requester Country</label>
        <input type="text" class="form-control form-control-sm"
               @bind="_requesterCountry" @bind:event="oninput" placeholder="e.g. DE" />
    </div>
</div>

<button class="btn btn-primary" @onclick="Send"
        disabled="@(_sending || !CredentialsReady || string.IsNullOrWhiteSpace(_trackingNumber))">
    @if (_sending) { <span class="spinner-border spinner-border-sm me-1"></span> }
    Track Shipment
</button>
@if (!CredentialsReady)
{
    <span class="text-warning small ms-2">Configure at least an API Key</span>
}

@code {
    [Parameter] public bool CredentialsReady { get; set; }
    [Parameter] public EventCallback<PlaygroundResult> OnResult { get; set; }

    private string _trackingNumber = "";
    private string _language = "";
    private string _requesterCountry = "";
    private bool _sending;

    private async Task Send()
    {
        _sending = true;
        StateHasChanged();

        var options = new DhlUnifiedTrackingOptions
        {
            Language = string.IsNullOrWhiteSpace(_language) ? null : _language,
            RequesterCountryCode = string.IsNullOrWhiteSpace(_requesterCountry) ? null : _requesterCountry
        };

        var result = await ClientFactory.ExecuteDhlTrackingAsync(
            Session.DhlCredentials,
            async client => await client.TrackAsync(_trackingNumber, options));

        _sending = false;
        await OnResult.InvokeAsync(result);
    }
}
