@namespace Parcel.NET.Docs.Playground.Shared

<ul class="nav nav-tabs mb-3">
    @foreach (var op in Operations)
    {
        <li class="nav-item">
            <button class="nav-link @(op == Selected ? "active" : "")"
                    type="button"
                    @onclick="() => OnSelected.InvokeAsync(op)">
                @op
            </button>
        </li>
    }
</ul>

@code {
    [Parameter] public List<string> Operations { get; set; } = [];
    [Parameter] public string? Selected { get; set; }
    [Parameter] public EventCallback<string> OnSelected { get; set; }
}
