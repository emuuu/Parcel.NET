@namespace Parcel.NET.Docs.Playground.Shared

<div class="card mb-3">
    <div class="card-header d-flex align-items-center justify-content-between py-2 cursor-pointer"
         @onclick="Toggle">
        <div class="d-flex align-items-center gap-2">
            <span class="fw-semibold small">@Title</span>
            @if (IsComplete)
            {
                <span class="badge bg-success">Connected</span>
            }
            else
            {
                <span class="badge bg-warning text-dark">Not configured</span>
            }
        </div>
        <span class="small text-muted">@(_collapsed ? "+" : "-")</span>
    </div>
    @if (!_collapsed)
    {
        <div class="card-body py-2">
            @ChildContent
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "Credentials";
    [Parameter] public bool IsComplete { get; set; }
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private bool _collapsed = false;

    private void Toggle() => _collapsed = !_collapsed;
}
